
@{
    ViewBag.Title = "CookieAta";
}



<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Cookie'e değer atama sayfası
                </div>
                <div class="block-controls">


                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form role="form" action="/Home/CookieAta" method="post">
                        <div class="form-group">
                            <label>Cookie Adı</label>
                            <input type="text" name="CookieAdi" class="form-control" placeholder="Cookie Adı Girin">
                        </div>
                        <div class="form-group">
                            <label>Cookie Degeri:</label>
                            <input type="text" name="CookieDegeri" class="form-control" placeholder="Cookie değeri girin">
                        </div>

                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>